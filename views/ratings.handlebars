<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/ratings.css">
    <script src="https://kit.fontawesome.com/e9135b40ea.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<body>
    <div class="container mt-5">
        <div class="form-group">
            <select id="product-select" class="form-control custom-select">
                <option value="0" disabled selected>Select Tutor</option>
                {{#each data}}
                <option value="{{tutor_names}}">{{tutor_names}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <input type="number" id="rating-control" class="form-control" step="0.1" max="5" placeholder="Rate 1 - 5"
                disabled>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tutors Rating</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr class="{{tutor_names}}">
                    <td>{{tutor_names}}</td>
                    <td>
                        <div class="stars-outer">
                            <div class="stars-inner"></div>
                        </div>
                        <span class="number-rating"></span>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="/javascripts/rating.js"></script>
</body>

</html>